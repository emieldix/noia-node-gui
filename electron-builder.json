{
    "productName": "NOIA",
    "directories": {
        "output": "app-builds"
    },
    "artifactName": "${name}-${version}-${os}-${arch}.${ext}",
    "win": {
        "icon": "assets",
        "target": "nsis",
        "publish": ["github"]
    },
    "mac": {
        "icon": "assets",
        "target": ["dmg", "zip"],
        "publish": ["github"]
    },
    "linux": {
        "icon": "assets",
        "target": ["AppImage"],
        "publish": ["github"]
    },
    "nsis": {
        "perMachine": true
    }
}
